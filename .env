# === Configuration de PostgreSQL pour Docker ou en local ===
POSTGRES_USER=user                # Nom d'utilisateur PostgreSQL
POSTGRES_PASSWORD=password        # Mot de passe PostgreSQL
POSTGRES_DB=jardinsolidaire       # Nom de la base PostgreSQL (doit exister)

# === Configuration de pgAdmin ===
PGADMIN_DEFAULT_EMAIL=admin@admin.com   # Identifiant pgAdmin
PGADMIN_DEFAULT_PASSWORD=admin          # Mot de passe pgAdmin

# === Configuration pour ton app Node.js ===
DB_HOST=postgres                # Hôte de la base
DB_PORT=5432                     # Port PostgreSQL (par défaut 5432)
DB_USER=user                     # Identique à POSTGRES_USER
DB_PASSWORD=password             # Identique à POSTGRES_PASSWORD
DB_NAME=jardinsolidaire          # Identique à POSTGRES_DB

# === URL de connexion complète pour Prisma ===
DATABASE_URL=postgresql://user:password@localhost:5432/jardinsolidaire



